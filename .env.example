# Environment Configuration for GVD FRS
# Copy this file to .env and update the values

# Application settings
APP_NAME=GVD FRS API
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Database settings
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=gvd_frs_db

# Authentication settings (should match gvd_ums settings)
GVD_UMS_BASE_URL=http://localhost:3000
JWT_SECRET_KEY=your-secret-key-here-should-match-gvd-ums
JWT_ALGORITHM=HS256

# CORS settings (comma-separated URLs)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Server settings
HOST=0.0.0.0
PORT=8001