# GVD-FRS Environment Configuration

# Application Settings
APP_NAME=GVD-FRS
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database Configuration
# For development, using PostgreSQL (you can change to SQLite if needed)
DATABASE_SYNC_URL=postgresql://postgres:password@localhost:5432/gvd_frs
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/gvd_frs
DATABASE_TEST_URL=postgresql://postgres:password@localhost:5432/gvd_frs

# Security
SECRET_KEY=your-secret-key-change-this-in-production-please
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# License Management
LICENSE_KEY_HEADER=X-License-Key
DEFAULT_LICENSE_EXPIRY_DAYS=365
ENABLE_LICENSE_USAGE_TRACKING=true

# External API
EXTERNAL_API_URL=https://api.example.com
EXTERNAL_API_KEY=your-api-key-here

# Metrics
ENABLE_METRICS=true

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080
